files:
    "/etc/nginx/conf.d/01buffer_proxy.conf" :
         mode: "000644"
         content: |
server {
    location / {
        proxy_buffering   on;
        proxy_buffer_size    128k;
        proxy_buffers        4   256k;
        proxy_busy_buffers_size 256k;
    }
}

container_commands:
     nginx_reload:
          command : "sudo service nginx reload"
