extends layout 

block content
	include mixins/print_goal_coach.pug
	head 
		title Art of Leadership
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='assets/css/mainProfile.css')
		link(rel='stylesheet' href='assets/css/executiveProfile_coach.css')
	body 
		script(src='assets/js/jquery.min.js')
		script(src='assets/js/jquery.scrollex.min.js')
		script(src='assets/js/skel.min.js')
		script(src='assets/js/util.js')
		script(src='assets/js/main.js')
		header#header 
			.logo
				a(href='/') Art of Leadership
			span 
			a(href='#menu') Menu
		nav#menu
			ul.links
				li
					a(href='/coachView') Home
				li
					a(href='/coachProfile_coach') Profile
				li
					a(href='/addGoal_coach') Goal
		section#One.wrapper.style3
			.inner
				header.align-center
					p Art of Leadership
					h2 Executive Profile

		div.row.client-info
			div.col-md-2
				img#profileImage(src=user.photograph)
				br
				div.info
					h1 #{user.name}
					h3 email: #{user.username}
					-var username = user.username
					input(type="hidden" name="profileClick" value=username)
					h4 #{user.bio_info}
			div.col-md-6
				br
				div.card.text-black.bg-primary-mb-3(style=" background-color: #EEE; padding:30px; border-radius: 20px;box-shadow: 5px 5px grey;")
					button.btn-btn-block.btn-info(type='button' data-toggle="modal" data-target="#addNoteModal" style="border: none;border-radius: 4px;") Add Note
					.modal(role="dialog", id="addNoteModal")
						.modal-dialog-centered.custom_modal_dialog(role="document")
							.modal-content
								form(id = "form" method='POST' action='/executiveProfile_coach')
									.modal-header
										h5 Add Note
										button.close(type='button' data-dismiss="modal")
											span &times;
									.modal-body
											input(type="text" name="noteContent" size="75px")
											input(type="hidden" name="currExecID" value=user.execID)
											input(type="hidden" name="profileClick" value=username)
									.modal-footer
										button.special(style="margin-top:30px" classe-"btn btn-danger" type="submit") Submit
				div.card.text-black.bg-primary-mb-3(style=" background-color: #EEE; padding:30px; border-radius: 20px;box-shadow: 5px 5px grey;")
					button.btn-btn-block.btn-info(type='button' data-toggle="modal" data-target="#sendMessageModal" style="border: none;border-radius: 4px; position: relative;") Send Message
					.modal(role="dialog", id="sendMessageModal")
						.modal-dialog-centered.custom_modal_dialog(role="document")
							.modal-content
								form(id = "form" method='POST' action='/executiveProfile_coach')
									.modal-header
										h5 Send Message to #{user.name}
										button.close(type='button' data-dismiss="modal")
											span &times;
									.modal-body
										p Message:
											-var emailAddress = user.username
											input(type="text" name="clientMessage" style="height=200px" size="80")
											input(type="hidden" name="messageClient" value=emailAddress)
											input(type="hidden" name="profileClick" value=username)
											input(type="hidden" name="sendMessage" value="sendMessage")
									.modal-footer
										button.special(classe-"btn btn-danger" type="submit") Submit
				

		div.card.border-dark.client-info
			.card-header
				h3 Notes
			.card-body
				//- each note in notes
					//- - var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
					//- - var dateFormat = note.note_date.toLocaleDateString("en-US", options);
					h6 #{dateFormat}
					p #{note.note_content}
		br
		div.jumbotron.client-info
			h3 Current Goals
			if user.exec_goals.length == 0
				h4.text-danger(style="text-align:center") There are no current goals
			else
				each goal in user.exec_goals
					if goal.goal_progress < 100
						+print_goal_coach(goal)


		div.jumbotron.client-info
			h3 Completed Goals
			if pastGoals.length != 0
				each pastGoal in pastGoals
					+print_goal_coach(pastGoal)
			else
				h4.text-danger(style="text-align:center") There are no completed goals
		
		br
		br
		br
		footer#footer
			div(class = "copyright")
				|By Leadership as an Artform
