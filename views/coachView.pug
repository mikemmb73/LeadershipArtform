extends layout

block content
	script
		include js/coachView.js
	script.
	head
		title Art of Leadership
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(rel='stylesheet' href='assets/css/mainProfile.css')
	body.subpage
		script(src='assets/js/jquery.min.js')
		script(src='assets/js/jquery.scrollex.min.js')
		script(src='assets/js/skel.min.js')
		script(src='assets/js/util.js')
		script(src='assets/js/main.js')
		header#header
			.logo
				a(href='/') Art of Leadership
			span 
			a(href='#menu') Menu
		nav#menu
			ul.links
				li
					a(href='/coachView') Home
				li
					a(href='/coachProfile_coach') Profile
				li
					a(href='/addGoal_coach') Goal
		section#One.wrapper.style3
			.inner
				header.align-center
					p Art of Leadership
					h2 Home
		#main.container
			h2#elements Welcome, Coach #{user.first_name}
			br
			br
			.row(class='200%' ,style="width:100%;")
				div.row.client_title
					script
						var clients = !{JSON.stringify(clients)};
				div(style="width:0%;")
					br
				div(style="width:50%;")
					
					h2 Progress Approval Requests:
					div.card.text-black.bg-primary-mb-3(style='max-wdith:20rem')
						- var noApprovals = "true";
						.card-body
							each obj in clients
								each goal in obj.goals_list
									div(style="width:100%")
										br
										br
									div(style="width:100%; background-color:#EEE; border-radius: 20px; height: 220px; padding-left: 20px;padding-right: 20px;box-shadow: 5px 5px grey;")
										if goal.progress_acceptance != goal.progress
										- noApprovals = "false";
										div.row(style="display: inline; width: 100%;")
											div
												img#clientImage(src=obj.photo , style="width: 70px;  ") 
											div
												h2(style="") #{obj.fname} #{obj.lname}
										p(style="position:relative; left:25px;")  Requests #{goal.goal_title} to move from progress level #{goal.progress} to #{goal.progress_update}
										form(method='POST' action='/viewGoal_coach')
											input(type="hidden" name="goal_id" value=goal.id)
											button.special.icon.fa-search(style="float:left" type="submit") Details
										form(method='POST' action='/coachView')
											button.special.icon.fa-check(style="float:right" type="submit") Accept
											input(type="hidden" name="acceptRequest" value=goal.goal_id)
						if noApprovals == "true"
							h3.text-danger(style="text-align:center") No pending approvals
				div(style="width:10%;")
					br
				div(style="width:35%;")
					h2 Invite a Client:
					br
					br
					.modal(role="dialog", id="addClientModal", style="padding: 30px; background-color:#EEE; border-radius: 20px;box-shadow: 5px 5px grey;")
						.modal-dialog-centered.custom_modal_dialog(role="document")
							.modal-content
								form(id = "form" method='POST' action='/coachView')
									.modal-header
									.modal-body
										p Client Name:
											br
											input(type="text" name="clientName")
									p Email Address:
										br
										input(type="text" name="emailAddress")
									p Welcome Message:
										br
										input(type="text" name = "message" style="height:100px; width:100%" )
								.modal-footer
									button.special.icon(type='submit') Submit
		br
		br
		br
		footer#footer
			div(class = "copyright")
				|By Leadership as an Artform						